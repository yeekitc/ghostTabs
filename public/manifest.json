{
  "manifest_version": 3,
  "name": "ghostTabs",
  "version": "1.0.0",
  "permissions": ["tabs", "storage", "activeTab", "scripting", "commands"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "ghostTabsIcon.png",
    "48": "ghostTabsIcon.png",
    "128": "ghostTabsIcon.png"
  },
  "action": {
    "default_icon": "ghostTabsIcon.png",
    "default_popup": "index.html"
  },
  "host_permissions": [
      "https://*/*",
      "http://*/*",
      "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "toggle_overlay": {
      "suggested_key": {
        "default": "Alt+Shift+Space",
        "mac": "Alt+Shift+Space" 
      },
      "description": "Toggle overlay"
    },
    "capture_tab": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Capture current tab"
    },
    "next_capture": {
      "suggested_key": {
        "default": "Alt+Right",
        "mac": "Alt+Right"
      },
      "description": "Next capture"
    },
    "previous_capture": {
      "suggested_key": {
        "default": "Alt+Left",
        "mac": "Alt+Left"
      },
      "description": "Previous capture"
    }
  }
}
